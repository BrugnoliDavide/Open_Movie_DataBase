<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.openvideodatabase">
    <!--xmlns:tools="http://schemas.android.com/tools" -->

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo_omdb"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_omdb"
        android:supportsRtl="true"
        android:theme="@style/Theme.OpenVideoDatabase">




        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login" />

        <activity
            android:name=".ShowDettailActivity"
            android:exported="false"
            />
        
        <activity
            android:name=".WelcomeAndSearchActivity"
            android:exported="true" /><!--provare successivamente ad impostare su false-->

        <activity android:name=".LikeFilmActivity" />

        <activity
            android:name=".EditReviewActivity"
            android:exported="false"
            android:theme="@style/Theme.OpenVideoDatabase" />


        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.OpenVideoDatabase">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>






    </application>

</manifest>